{
  "name": "projectanalysis-mcp",
  "version": "0.1.0",
  "description": "MCP server for comprehensive project analysis and code understanding",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "projectanalysis-mcp": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "docs:generate": "typedoc src --out docs/api",
    "analyze:deps": "madge --circular --extensions ts src/",
    "analyze:complexity": "tsx scripts/analyze-complexity.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "code-analysis",
    "project-analysis",
    "ast",
    "dependencies",
    "metrics",
    "visualization",
    "claude",
    "ai-tools"
  ],
  "author": "Project Analysis Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/projectanalysis-mcp.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "acorn": "^8.10.0",
    "ajv": "^8.12.0",
    "debug": "^4.3.0",
    "dependency-cruiser": "^13.0.0",
    "fast-glob": "^3.3.0",
    "find-up": "^6.3.0",
    "ignore": "^5.2.0",
    "jscpd": "^3.5.0",
    "lodash": "^4.17.21",
    "lru-cache": "^10.0.0",
    "madge": "^6.1.0",
    "node-cache": "^5.1.2",
    "p-limit": "^4.0.0",
    "tree-sitter": "^0.20.0",
    "tree-sitter-javascript": "^0.21.0",
    "tree-sitter-typescript": "^0.20.0",
    "tree-sitter-python": "^0.20.0",
    "tree-sitter-java": "^0.20.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.8",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^3.14.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.2.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/tests/**/*.test.ts",
      "**/tests/**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/tests/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "error",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "always"
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}